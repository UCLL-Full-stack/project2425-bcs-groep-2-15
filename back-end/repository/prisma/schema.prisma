generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  library   Library    @relation(fields: [libraryId], references: [id])
  profile   Profile    @relation(fields: [profileId], references: [id])
  purchases Purchase[]
  balance   Float

  libraryId Int @unique
  profileId Int @unique
}

model Profile {
  id          Int    @id @default(autoincrement())
  description String
  profilePic  String

  User User? @relation
}

model Purchase {
  id   Int      @id @default(autoincrement())
  date DateTime
  cost Float
  user User     @relation(fields: [userId], references: [id])
  game Game     @relation(fields: [gameId], references: [id])

  userId Int
  gameId Int
}

model Game {
  id         Int     @id @default(autoincrement())
  title      String
  image      String
  categories Genre[]
  price      Float
  discount   Int?

  Purchase         Purchase[]
  GamesInLibraries GamesInLibraries[]
}

model Library {
  id           Int   @id @default(autoincrement())
  achievements Int
  timePlayed   Int
  User         User? @relation

  GamesInLibraries GamesInLibraries[]
}

model GamesInLibraries {
  game      Game    @relation(fields: [gameId], references: [id])
  gameId    Int
  library   Library @relation(fields: [libraryId], references: [id])
  libraryId Int

  @@id([gameId, libraryId])
}

enum Genre {
  Action
  Adventure
  Fighting
  FPS
  RPG
}
